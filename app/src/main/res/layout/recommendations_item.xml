<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="8dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="3dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    \
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/recommendationslistingImage"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/recommendationslistingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is Hawker Store name "
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@+id/recommendationslistingImage"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/recommendationslistingAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This is the address of the hawker"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@id/recommendationslistingName"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/recommendationslistingPostalCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="This is the postal code"
            app:layout_constraintTop_toBottomOf="@id/recommendationslistingAddress"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>