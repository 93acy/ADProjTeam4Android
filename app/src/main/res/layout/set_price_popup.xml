        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10">

    </EditText>
    <!--
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cancel">

    </Button>
    -->

    <Button
        android:id="@+id/confirmFoodPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="confirm">

    </Button>

</LinearLayout>